create table client(client_id BIGINT PRIMARY Key generated by default as identity,
				   name varchar(50) default null,
				   date_of_birth DATE,
				   username varchar (50) default null,
				   password varchar (50) default null,
				   bank_account_id BIGINT,
				   FOREIGN KEY ( bank_account_id) REFERENCES bankaccount(bank_account_id));
				   
select * from client
drop table client

insert into client values(1,'madhu','1998-08-22','madhuvunna','Madhu@123',2233556677);
				   
create table bankaccount(bank_account_id BIGINT PRIMARY Key generated by default as identity,
						 initial_balance double precision,
						 current_balance DOUBLE precision,
						 max_balance DOUBLE precision);
						 
select * from bankaccount	

drop table bankaccount

insert into bankaccount values(2233556677,25000,632533,20000);

CREATE TABLE client_phone_numbers (
    client_id BIGINT,
    client_phone_number VARCHAR(50) DEFAULT NULL,
    PRIMARY KEY (client_id, client_phone_number),
    FOREIGN KEY (client_id) REFERENCES client(client_id)
);

								 
select * from client_phone_numbers	
insert into client_phone_numbers values(1,7013866097);

drop table client_phone_numbers	


create table client_emails (client_id BIGINT,
							client_emails varchar (50) default null,
							PRIMARY KEY (client_id, client_emails),
						   FOREIGN KEY (client_id) REFERENCES client(client_id));
						   
select * from client_emails
insert into client_emails values(1,'vunna@gmail.com');

drop table  client_emails	
